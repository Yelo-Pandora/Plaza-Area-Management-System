/* pages/conf/index.wxss */

.container {
	padding: 12px;
	background: #eef6ff;
	min-height: 100vh;
	box-sizing: border-box;
}

.section {
	background: #fff;
	border-radius: 12px;
	border: 1px solid #eef6ff;
	box-shadow: 0 2px 8px rgba(0,0,0,0.06);
	padding: 12px;
}

/* 单行：头像 + 昵称 + 右侧按钮 */
.row-card { display: flex; flex-direction: row; align-items: center; width: 100%; }

.profile-card { width: 100%; }

.avatar {
	width: 44px;
	height: 44px;
	border-radius: 999rpx;
	margin-right: 12px;
	overflow: hidden;
	background: #fff;
	border: 1px solid #eef6ff;
}

.profile-info { 
    flex: 1; 
    display: flex; 
    flex-direction: column; /* 纵向排列昵称和简介 */
    justify-content: center;
}

.user-name {
	font-size: 16px;
	font-weight: 700;
	color: #111;
	line-height: 1.4;
}

.user-desc {
    font-size: 12px;
    color: #888;
    margin-top: 2px;
}

.btn {
	background: #1890ff;
	color: #fff;
	padding: 8px 12px;
	border-radius: 10px;
	text-align: center;
	font-weight: 600;
	box-shadow: 0 2px 0 rgba(0,0,0,0.04);
}
.btn:active { opacity: 0.92; }

.btn.logout { 
    margin-left: 10px; 
    width: 64px; /* 稍微缩小宽度更美观 */
    height: 30px; 
    line-height: 30px;
    padding: 0;
    font-size: 12px; 
    background: #ff4d4f; 
}

.login-box {
	width: 100%;
	background: #eef6ff;
	border: 1px solid #1890ff;
	border-radius: 12px;
	padding: 14px 12px;
	box-sizing: border-box;
}
.login-text { color: #1890ff; font-size: 16px; font-weight: 600; }

/* 搜索历史记录的相关样式 */
.history-container {
  margin-top: 24px;
  padding-top: 16px;
  border-top: 1px dashed #e0e9f5;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12px;
}

/* 调大“搜索历史”字号 */
.history-title {
  font-size: 17px; /* 从14px调大 */
  color: #333;
  font-weight: bold;
}

/* 调大“全部清空”字号 */
.history-clear {
  font-size: 15px; /* 从12px调大 */
  color: #999;
  padding: 4px 8px;
}

.history-list {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
}

.empty-history {
  text-align: center;
  color: #bbb;
  font-size: 13px;
  padding: 20px 0;
}

.history-list-vertical {
  display: flex;
  flex-direction: column;
}

.history-item-box {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.history-content-row {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  font-size: 30rpx;
}

.h-type {
  color: #666;
  font-weight: bold;
  min-width: 60rpx;
}

.h-split {
  margin: 0 20rpx;
  color: #ddd;
}

.h-kw {
  color: #333;
  flex: 1;
  word-break: break-all;
}

.history-btn-row {
  display: flex;
  justify-content: flex-start;
  gap: 20rpx;
}

/* 按钮通用样式修改为圆角矩形 */
.mini-btn {
  font-size: 26rpx;
  padding: 8rpx 24rpx;
  border-radius: 16rpx;
  border-width: 1rpx;
  border-style: solid;
  transition: opacity 0.2s;
}

.mini-btn:active {
  opacity: 0.6;
}

/* 复制按钮：蓝色边框、淡蓝底、蓝字 */
.btn-blue {
  color: #1890ff;
  background-color: #e6f7ff;
  border-color: #1890ff;
}

/* 再次搜索按钮：绿色边框、淡绿底、绿字 */
.btn-green {
  color: #1AAD19;
  background-color: #f6ffed;
  border-color: #1AAD19;
}

/* 删除按钮：红色边框、淡红底、红字 */
.btn-red {
  color: #ff4d4f;
  background-color: #fff1f0;
  border-color: #ff4d4f;
}

/* 移除之前旧的 history-tag 样式避免冲突 */
.history-tag { display: none; }

/* 登录弹窗样式 */
.login-form {
  padding: 20rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.form-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
}

/* 头像选择器按钮样式重置 */
.avatar-wrapper {
  padding: 0;
  width: 160rpx !important;
  height: 160rpx !important;
  border-radius: 80rpx;
  margin-bottom: 30rpx;
  background-color: #f8f8f8;
  border: 4rpx solid #1890ff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.avatar-edit {
  width: 100%;
  height: 100%;
}

.avatar-tip {
  position: absolute;
  bottom: 0;
  width: 100%;
  background: rgba(0,0,0,0.4);
  color: #fff;
  font-size: 24rpx;
  padding: 4rpx 0;
  text-align: center;
}

.input-group {
  width: 100%;
  display: flex;
  align-items: center;
  background: #f5f7fa;
  padding: 24rpx;
  border-radius: 12rpx;
  margin-bottom: 40rpx;
  box-sizing: border-box;
}

.input-group text {
  font-size: 28rpx;
  color: #666;
  width: 100rpx;
}

.nickname-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.btn-submit {
  width: 100% !important;
  background: #1890ff;
  color: #fff;
  border-radius: 40rpx;
  font-weight: bold;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0;
}

.login-hint {
  font-size: 24rpx;
  color: #363636;
  margin-top: 24rpx;
}