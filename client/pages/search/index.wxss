/* pages/search/index.wxss */
.search-page {
    height: 100%;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
}

.search-header {
  padding: 30rpx 30rpx 8rpx 30rpx;
  background-color: #f7f7f7;
}

.search-bar {
  display: flex;
  align-items: center;
  background-color: #e6f3ff; /* 淡蓝色底色 */
  height: 88rpx;
  border-radius: 44rpx;
  padding: 0 10rpx 0 0; 
  box-sizing: border-box;
}

/* 左侧选择器容器 */
.type-selector {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 20rpx 0 30rpx;
  height: 88rpx;
}

.type-selector text {
  font-size: 32rpx;
  color: #333;
  white-space: nowrap;
}

/* 下拉小箭头 */
.arrow-down {
  width: 0;
  height: 0;
  border-left: 8rpx solid transparent;
  border-right: 8rpx solid transparent;
  border-top: 10rpx solid #666;
  margin-left: 10rpx;
}

/* 垂直分割线 */
.search-divider {
  width: 1rpx;
  height: 30rpx;
  background-color: #ccc;
  margin: 0 10rpx;
}

.search-input {
  flex: 1;
  height: 100%;
  font-size: 32rpx;
  color: #333;
  padding-left: 10rpx;
}

.placeholder {
  color: #99abbd;
}

.search-btn {
  background-color: #1AAD19;
  color: #ffffff;
  font-size: 32rpx;
  height: 68rpx;
  line-height: 68rpx;
  padding: 0 34rpx;
  border-radius: 34rpx;
  font-weight: 500;
}

/* 结果列表容器 */
.results-container {
  padding-bottom: 40rpx;
}

/* 搜索结果大类容器：增加类间距 */
.results-section {
  margin-bottom: 48rpx !important; /* 类别之间的间距比项间距大 */
  background: transparent !important;
  box-shadow: none !important;
  padding: 0 30rpx !important;
  width: auto !important;
}

/* 蓝色圆角分类标签 */
.category-tag {
  display: inline-block;
  font-size: 26rpx;
  color: #007aff;
  background: rgba(0, 122, 255, 0.1);
  padding: 6rpx 24rpx;
  border-radius: 30rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
  border: 1rpx solid rgba(0, 122, 255, 0.2);
}

/* 搜索结果项卡片 */
.result-card {
  background: #ffffff;
  margin-bottom: 20rpx; /* 相邻两项的间隔 */
  padding: 24rpx 30rpx;
  border-radius: 12rpx;
  position: relative;
  /* 左侧蓝色竖线 */
  border-left: 8rpx solid #007aff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.result-card:last-child {
  margin-bottom: 0;
}

.result-card .act-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.result-card .act-meta {
  font-size: 24rpx;
  color: #888;
  margin-top: 10rpx;
}

/* 覆盖一部分全局样式，让结果看起来更精致 */
.result-item:last-child {
  border-bottom: none;
}

.modal-mask {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 85%;
  height: 80vh;
  background: #fff;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.modal-header {
  padding: 24rpx;
  border-bottom: 3rpx solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.modal-title {
  font-weight: bold; 
  font-size: 32rpx; 
}

.close-icon { 
	color: #1890ff;
	font-weight: 700;
	background: #fff;
	border: 1px solid #1890ff;
	border-radius: 999px;
	padding: 6px 10px;
	font-size: 12px;
	line-height: 1;
}

.event-main-header,
.store-main-header {
  display: flex;
  align-items: center; /* 垂直居中 */
  padding-bottom: 30rpx;
}

.event-main-image,
.store-main-image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 12rpx;
  background-color: #f0f0f0;
  margin-right: 24rpx;
  flex-shrink: 0; /* 防止图片被挤压 */
}

.event-header-text,
.store-header-text {
  display: flex;
  flex-direction: column;
  justify-content: space-around; /* 均匀分配垂直空间 */
  height: 140rpx; /* 与图片高度一致 */
  flex: 1;
}

.event-name-large,
.store-name-large,
.eventarea-name-large {
  font-size: 36rpx;
  font-weight: bold;
  color: #222;
  line-height: 1.2;
}

.event-tags,
.store-tags {
  display: flex;
  flex-direction: row; /* 横向排列标签 */
  margin-top: 10rpx;
}

.event-type-tag,
.store-type-tag, 
.status-tag {
  font-size: 28rpx;
  padding: 4rpx 14rpx;
  border-radius: 6rpx;
  margin-right: 12rpx;
}

.event-type-tag,
.store-type-tag {
  color: #007aff;
  background: rgba(25, 114, 173, 0.1);
  align-self: flex-start; /* 宽度随内容撑开 */
  border: 1rpx solid rgba(25, 114, 173, 0.3);
}

.status-tag.is-open {
  color: #1AAD19;
  background: rgba(26, 173, 25, 0.1);
  border: 1rpx solid rgba(26, 173, 25, 0.3);
}

.status-tag.is-closed {
  color: #e64340;
  background: rgba(230, 67, 64, 0.1);
  border: 1rpx solid rgba(230, 67, 64, 0.3);
}

.modal-divider {
  height: 1rpx;
  background: #eee;
  margin-bottom: 30rpx;
}

.modal-body {
  padding: 30rpx;
  flex: 1;
  box-sizing: border-box;
  overflow: hidden;
  height: 0;
}

.detail-row { 
  margin-bottom: 20rpx; 
  display: flex; 
  font-size: 28rpx; 
}

.label { 
  color: #4e4e4e; 
  width: 160rpx; 
}

.value { 
  color: #333; 
  flex: 1; 
  white-space: pre-wrap;  /* 允许识别 \n 换行符 */
}

.sub-section { 
  margin-top: 30rpx; 
  border-top: 1rpx dashed #eee; 
  padding-top: 20rpx; 
}

.sub-title { 
  font-size: 30rpx; 
  color: #666; 
  margin-bottom: 16rpx; 
}

.mini-card {
  background: #f9f9f9;
  padding: 16rpx;
  border-radius: 8rpx;
  margin-bottom: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size: 24rpx;
}

.tag { 
  color: #1AAD19; 
  font-size: 20rpx; 
  border: 1rpx solid #1AAD19; 
  padding: 2rpx 8rpx; 
  border-radius: 4rpx; 
}

.modal-footer { 
  padding: 20rpx; 
  border-top: 1rpx solid #eee; }

.modal-loading { 
  text-align: center; 
  padding: 40rpx; 
  color: #999; 
}

.url-link {
  color: #576b95; 
  text-decoration: underline; 
  font-weight: 500;
  word-break: break-all; 
}

.map-location-btn {
  width: 100%;
  height: 70rpx;
  color: #007aff;
  background: rgba(25, 114, 173, 0.1);
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 400;
  margin-top: 10rpx;
  display: flex;           /* 必须开启 flex 布局 */
  align-items: center;     /* 垂直方向居中 */
  justify-content: center; /* 水平方向居中 (注意是 content 而不是 items) */
  border: 3rpx solid #cce5ff;
  box-sizing: border-box;  /* 防止 border 撑大容器导致高度溢出 */
}

.map-location-btn:active {
  background-color: #d1e9ff;
  opacity: 0.9;
}