.container {
	padding: 12px;
	background: #eef6ff;
}
.map-area {
	background: #fff;
	border-radius: 10px;
	padding: 10px;
	margin-bottom: 12px;
	position: relative;
	box-shadow: 0 2px 6px rgba(0,0,0,0.06);
}
.map-controls { display:flex; justify-content:space-between; align-items:center; margin-bottom:8px; }
.picker {
	padding: 8px 10px;
	background: #eef6ff;
	border-radius: 8px;
	color: #1890ff;
	font-weight: 600;
}
.zoom-buttons button {
	width: 28px;
	height: 28px;
	margin-left: 6px;
	padding: 0;
	border-radius: 50%;
	display: inline-flex;
	align-items: center;
	justify-content: center;
	font-size: 16px;
	line-height: 1;
	overflow: hidden;
	background: rgba(0,0,0,0.55);
	color: #fff;
	border: none;
	box-shadow: 0 8px 20px rgba(0,0,0,0.45);
}
.map-canvas { background:#fafafa; border-radius:8px; }
/* 提示：做成覆盖式标签，更醒目且减少额外留白 */
.legend {
	position: absolute;
	left: 12px;
	right: 56px; /* 给右下角缩放控件留空间 */
	bottom: 12px;
	font-size: 12px;
	color: #1890ff;
	background: rgba(238, 246, 255, 0.96);
	border: 1px solid #1890ff;
	border-radius: 10px;
	padding: 6px 10px;
	line-height: 16px;
	font-weight: 600;
	box-shadow: 0 4px 14px rgba(24,144,255,0.14);
}

.region-modal { position:fixed; left:0; right:0; top:0; bottom:0; background:rgba(0,0,0,0.4); display:flex; align-items:center; justify-content:center; }
.modal-card { width:86%; background:#fff; border-radius:12px; padding:12px; box-shadow: 0 8px 20px rgba(0,0,0,0.12); }
.modal-title { font-weight:600; font-size:16px; margin-bottom:8px; }
.modal-body { margin-bottom:12px; color:#111; }
.modal-actions { text-align:right; }
.modal-actions button {
	background: #eef6ff;
	color: #1890ff;
	border: 1px solid #1890ff;
	border-radius: 8px;
	padding: 8px 12px;
}

/* 弹窗信息：卡片化字段排版 */
.info-card {
	background: #fff;
	border-radius: 10px;
	padding: 10px;
	border: 1px solid #eef6ff;
	box-shadow: 0 1px 4px rgba(0,0,0,0.06);
}
.info-row {
	display: flex;
	flex-direction: row;
	align-items: flex-start;
	padding: 8px 0;
	border-bottom: 1px solid #eef6ff;
}
.info-row:last-child { border-bottom: none; }
.info-label {
	flex: 0 0 78px;
	width: 78px;
	font-size: 12px;
	color: #666;
	line-height: 18px;
}
.info-value {
	flex: 1 1 auto;
	font-size: 13px;
	color: #111;
	line-height: 18px;
	font-weight: 600;
}
.info-row-multi { align-items: flex-start; }
.info-value-multi { font-weight: 500; color: #333; }

.info-pill {
	display: inline-block;
	background: #eef6ff;
	color: #1890ff;
	border: 1px solid #1890ff;
	border-radius: 999px;
	padding: 6px 10px;
	font-size: 13px;
	font-weight: 600;
}

.section { margin-top:10px; }
.section-title {
	font-size: 20px;
	font-weight: bold;
	margin: 12px 16px;
	color: #111;
	padding-left: 10px;
	border-left: 4px solid #1890ff;
}

.activity-item {
	/* 外层“底色框”：白底 + 轻阴影，和内层卡片形成区分 */
	background: #fff;
	border-radius: 12px;
	padding: 8px;
	margin: 10px 12px;
	border: 1px solid #eef6ff;
	box-shadow: 0 2px 8px rgba(0,0,0,0.06);
}
.activity-card {
	/* 内层卡片：浅蓝底，突出内容区域 */
	background: #eef6ff;
	padding: 10px;
	border-radius: 10px;
	box-shadow: none;
	display: flex;
	flex-direction: row;
	align-items: flex-start;
}
.thumb-wrap {
	width: 76px;
	height: 76px;
	flex: 0 0 76px;
	border-radius: 8px;
	overflow: hidden;
	margin-right: 12px;
	background: #fff;
	border: 1px solid #eef6ff;
}
.thumb { width:100%; height:100%; display:block; }
.content { flex: 1 1 auto; }
.title-row { display:flex; justify-content:space-between; align-items:center; }
.act-title { font-size:16px; font-weight:600; margin-bottom:4px; color:#111; }
.badge { background:#eef6ff; color:#007aff; font-size:11px; padding:4px 8px; border-radius:12px; }
.act-desc { color:#444; font-size:13px; margin:6px 0; }
.desc-clamp { display:-webkit-box; -webkit-line-clamp:2; -webkit-box-orient:vertical; overflow:hidden; }
.act-time { color:#888; font-size:12px; }
.card-footer { display:flex; justify-content:space-between; align-items:center; margin-top:6px; }
.event-status { font-size:12px; padding:4px 8px; border-radius:10px; display:inline-block; min-width:44px; text-align:center; }
.empty { padding:30px; text-align:center; color:#999; }
.empty { color:#999; text-align:center; padding:16px 0; }
.more-actions { text-align:center; margin-top:10px; }
.more-actions button { background:#1890ff; color:#fff; padding:10px 14px; border-radius:8px; font-weight:600; }

/* 状态通用样式 与活动页保持一致 */
.status-enabled { background: #28a745; color: #fff; box-shadow: 0 1px 0 rgba(0,0,0,0.06); }
.status-disabled { background: #ff4d4f; color: #fff; border: 1px solid #d9363e; box-shadow: 0 1px 0 rgba(217,54,62,0.08); }

/* 浮动缩放控件 */
.zoom-knob { position: absolute; right: 10px; bottom: 10px; display: flex; flex-direction: column; gap: 6px; align-items: center; }

.zoom-btn {
	width: 28px;
	height: 28px;
	padding: 0;
	box-sizing: border-box;
	min-width: 0;
	border-radius: 50%;
	display: inline-flex;
	align-items: center;
	justify-content: center;
	background: #1890ff;
	color: #fff;
	font-size: 16px;
	line-height: 1;
	text-align: center;
	border: none;
	box-shadow: 0 8px 20px rgba(0,0,0,0.18);
}
.zoom-btn:active { transform: scale(0.96); }
.zoom-label { position: absolute; right: 44px; bottom: 6px; background: #111; color: #fff; padding:4px 6px; border-radius:6px; font-size:11px; box-shadow: 0 8px 20px rgba(0,0,0,0.18); }

/* area-card styles copied from activities page to match modal appearance */
.area-card {
	background: #fff;
	border-radius: 8px;
	padding: 10px;
	margin-bottom: 10px;
	box-shadow: 0 1px 4px rgba(0,0,0,0.06);
}
.area-header {
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-bottom: 6px;
}
.area-status { font-size: 13px; color: #333; font-weight: 600; }
.area-title-row { margin-bottom: 6px; display:flex; justify-content:space-between; align-items:center; }
.area-title { font-size: 14px; font-weight: 600; color: #111; }
.area-badge { order: 2; }
.area-badge { font-size: 11px; color: #007aff; background: #eef6ff; padding: 4px 8px; border-radius: 10px; }
.area-badge-line { display: flex; justify-content: flex-end; margin-bottom: 6px; }
.modal-event-status { font-size: 12px; color: #007aff; margin-left: 8px; }
.area-desc { font-size: 13px; color: #444; margin-bottom: 6px; }
.area-meta { font-size: 12px; color: #666; }
.area-footer { display: flex; justify-content: space-between; align-items: center; }
.area-status-right { font-size: 12px; padding: 4px 8px; border-radius: 8px; display: inline-block; min-width: 44px; text-align: center; }
